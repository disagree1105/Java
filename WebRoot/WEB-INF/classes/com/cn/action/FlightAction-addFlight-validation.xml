<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.dtd">
  		
<validators>
    <field name="flight.originstation">      
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>始发站不能为空!</message>
        </field-validator>
        
    </field>
    
    <field name="flight.terminalstation">   
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>终点站不能为空!</message>
        </field-validator>
    </field>

    <field name="flight.origintime">
        <field-validator type="requiredstring">
            <message>始发时间不能为空!</message>
        </field-validator>
    </field>    
    
    <field name="flight.terminaltime">
        <field-validator type="requiredstring">
            <message>到达时间不能为空!</message>
        </field-validator>
    </field>     
 
     <field name="flight.ticketsum">
        <field-validator type="required">
            <message>总票数不能为空!</message>
        </field-validator>
    </field>
    
    <field name="flight.ticketleft">
        <field-validator type="required">
            <message>余票数不能为空!</message>
        </field-validator>
    </field>
    
   <field name="flight.price">
        <field-validator type="required">
            <message>票价不能为空!</message>
        </field-validator>
    </field>
</validators>