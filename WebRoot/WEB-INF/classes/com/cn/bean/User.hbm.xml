<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cn.bean">
	<class name="User">
		<id name="id" type="java.lang.Integer">
			<column name="id"></column>
			<generator class="native"></generator>
		</id>
		<property name="username" type="java.lang.String">
			<column name="username" length="16" not-null="true" unique="true" />
		</property>
		<property name="password" type="java.lang.String">
			<column name="password" length="16" not-null="true" unique="true" />
		</property>
		<property name="type" type="java.lang.String">
			<column name="type" length="10" />
		</property>
		<property name="name" type="java.lang.String">
			<column name="name" length="20" />
		</property>
		<property name="idcard_number" type="java.lang.String">
			<column name="idcard_number" length="30" />
		</property>
		<property name="tel" type="java.lang.String">
			<column name="tel" length="30" />
		</property>
	</class>
</hibernate-mapping>
